---
// @ts-ignore
import Link from '@components/ui/link.astro';
import { Icon } from 'astro-icon';

const { plan } = Astro.props;

const colors = {
  indigo: 'text-indigo-600',
  orange: 'text-orange-700',
  purple: 'text-purple-600',
};
---

<div>
  <div
    class:list={[
      'relative order-first flex w-full flex-col rounded-lg border px-6 py-5 lg:order-none',
      plan.popular
        ? '  border-orange-500 shadow-lg shadow-orange-50'
        : ' border-neutral-200 shadow-sm',
    ]}
  >
    {
      plan.popular && (
        <span class="absolute -top-3 left-1/2 inline-flex -translate-x-1/2 rounded-full bg-gradient-to-r from-red-500 to-orange-500 px-3 py-1 text-xs font-medium text-white ">
          Popular
        </span>
      )
    }

    <div class="">
      <h3 class:list={[colors[plan.color] || 'text-neutral-800']}>
        {plan.name}
      </h3><p class="mt-2 text-black">
        {
          plan.price ? (
            <span class="flex items-baseline">
              <span class=""> $</span>
              <span class="text-2xl font-bold  md:text-4xl"> {plan.price}</span>
              <span class="ml-1 text-neutral-600"> /month</span>
            </span>
          ) : (
            <span class="text-2xl font-bold  md:text-4xl"> Custom</span>
          )
        }
      </p>

      <p class="mt-3 text-sm text-neutral-500">{plan.desc}</p>
    </div><ul class="mt-8 grid gap-y-4 text-left">
      {
        plan.features.map((item) => (
          <li class="flex items-center gap-3 text-neutral-800">
            <Icon name="ph:check-circle-fill" class="h-5 w-5" />

            <span class="text-sm">{item}</span>
          </li>
        ))
      }
    </ul><div class="mt-8 flex">
      <Link href={plan.button.link || '#'} block style={plan.popular ? 'primary' : 'outline'}>
        {plan.button.text || 'Get Started'}
      </Link>
    </div>
  </div>
</div>
