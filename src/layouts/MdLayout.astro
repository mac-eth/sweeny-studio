---
import Container from '@components/ui/astro/container.astro';
import Sectionhead from '@components/ui/astro/sectionhead.astro';
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <Container>
    <Sectionhead>
      <Fragment slot="title">{frontmatter.title}</Fragment>
      <Fragment slot="desc">
        Last updated on {frontmatter.date}
      </Fragment>
    </Sectionhead>

    <div class="prose mx-auto mt-10">
      <slot />
    </div>
  </Container>
</Layout>
