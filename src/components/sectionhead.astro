---
import Badge from '@components/ui/badge.astro';

const { align = 'center' } = Astro.props;
---

<div class:list={['mt-16', align === 'center' && 'text-center']}>
  {
    Astro.slots.has('badge') && (
      <div class="mb-4">
        <Badge color="purple">
          <slot name="badge" />
        </Badge>
      </div>
    )
  }
  <h1 class="text-4xl font-bold lg:text-5xl lg:tracking-tight">
    <slot name="title">Title</slot>
  </h1>
  <p class="mx-auto mt-4 max-w-xl text-lg text-slate-500">
    <slot name="desc">Some description goes here</slot>
  </p>
</div>
