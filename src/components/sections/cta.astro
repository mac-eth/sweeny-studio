---
import Button from '@components/ui/react/button';

const { title, description, buttonTitle } = Astro.props;
---

<div
  class="my-12 w-full bg-gradient-to-br from-neutral-800 to-neutral-950 py-16 lg:border-y lg:border-neutral-700"
>
  <div class="flex flex-col items-center gap-y-8">
    <h3 class="mx-8 text-center font-melodrama text-5xl text-neutral-100">
      {title}
    </h3>
    <p class="mx-12 text-center text-neutral-300 lg:max-w-2xl">{description}</p>
    <Button client:load size="xl" className=" text-2xl uppercase">
      <a href="/contact">{buttonTitle}</a>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="32"
        height="32"
        fill="currentColor"
        viewBox="0 0 256 256"
        class="ml-2 inline-block transition-all duration-300 group-hover:translate-x-2"
      >
        <path
          d="M200,64V168a8,8,0,0,1-16,0V83.31L69.66,197.66a8,8,0,0,1-11.32-11.32L172.69,72H88a8,8,0,0,1,0-16H192A8,8,0,0,1,200,64Z"
        ></path>
      </svg>
    </Button>
  </div>
</div>
