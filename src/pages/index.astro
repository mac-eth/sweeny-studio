---
import CaseStudies from '@components/sections/case-studies.astro';
import CTA from '@components/sections/cta.astro';
import Hero from '@components/sections/hero';
import Logos from '@components/sections/logos.astro';
import Who from '@components/sections/painpoint';
import Process from '@components/sections/process.astro';
import ScrollingContent from '@components/sections/scrolling-portfolio.astro';
import Testimonials from '@components/sections/testimonial.astro';
import Why from '@components/sections/why';
import Container from '@components/ui/astro/container.astro';
import Layout from '@layouts/Layout.astro';
---

<Layout footerMargin={false}>
  <Hero client:load />

  <Container>
    <Logos />
  </Container>
  <ScrollingContent baseVelocity={100} />
  <Who client:load />
  <Why client:load />
  <CTA
    title="Are You Ready To Stand Out From Your Competitors?"
    description="No matter what your business is, we can help you create a website that will engage your customers, drive conversions and make you stand out from the crowd. "
    buttonTitle="Let's Chat"
  />
  <Container>
    <Process />
  </Container>
  <ScrollingContent baseVelocity={100} />
  <Container>
    <CaseStudies />
    <Testimonials />
  </Container>
  <CTA
    title="Are You Ready To Give Your Business A Stunning Website?"
    description="No matter what your business is, we can help you create a website that will engage your customers, drive conversions and make you stand out from the crowd. "
    buttonTitle="Let's Chat"
  />
</Layout>
