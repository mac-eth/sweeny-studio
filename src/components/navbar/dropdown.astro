---
import { DropdownItems, Dropdown as NavDropdown } from 'astro-navbar';

const { title, lastItem, children } = Astro.props;
---

<li class="relative isolate z-50">
  <NavDropdown class="group">
    <button
      class="flex w-full items-center gap-1 rounded-full py-2 text-lg text-neutral-300 underline-offset-4 transition duration-200 hover:text-neutral-50 hover:underline lg:w-auto lg:px-3"
    >
      <span>{title}</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="3"
        stroke="currentColor"
        class="mt-0.5 h-3 w-3 duration-200 group-open:rotate-180"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
      </svg>
    </button>
    <DropdownItems>
      <div
        class:list={[
          'z-50 w-full border-l border-neutral-200 lg:absolute lg:w-48 lg:border-0',
          lastItem ? 'origin-top-right lg:right-0' : 'origin-top-left lg:left-0',
        ]}
      >
        <div
          class="flex flex-col border-neutral-700 px-3 lg:rounded-md lg:border lg:bg-neutral-950 lg:py-2 lg:shadow"
        >
          {
            children.map((item) => (
              <a
                href={item.path}
                class="rounded  py-1 text-lg text-gray-300 underline-offset-4 duration-200 hover:text-neutral-50 hover:underline"
              >
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
    </DropdownItems>
  </NavDropdown>
</li>
